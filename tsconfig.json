{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "./src/index.ts",
    "./src/Classes/**/*.ts",
    "./src/Helpers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}